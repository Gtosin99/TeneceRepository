<%- include('../includes/head.ejs') //This is the layout functionality for EJS %>
<body>
<%- include('../includes/navigation.ejs') //This is the layout functionality for EJS %> 
  <main class="orders-container">
  <h1>Your Orders</h1>
  <% if (orders.length > 0) { %>
    <ul class="order-list">
      <% orders.forEach(order => { %>
        <li class="order-item">
          <h2>Order #<%= order.id %></h2>
          <ul class="order-products">
            <% order.products.forEach(prod => { %>
              <li>
                <strong><%= prod.title %></strong> - â‚¦<%= prod.price %> 
                (Qty: <%= prod.orderitem.quantity %>)
              </li>
            <% }) %>
          </ul>
        </li>
      <% }) %>
    </ul>
    <a href="/" class="btn">Continue Shopping</a>
  <% } else { %>
    <p class="centered">You have no orders yet.</p>
  <% } %>
</main>

</body>